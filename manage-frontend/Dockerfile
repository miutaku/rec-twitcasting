FROM node:lts
ARG NEXT_PUBLIC_MANAGE_BACKEND_API_FQDN
ARG NEXT_PUBLIC_MANAGE_BACKEND_API_PORT
ENV NEXT_PUBLIC_MANAGE_BACKEND_API_FQDN=$NEXT_PUBLIC_MANAGE_BACKEND_API_FQDN
ENV NEXT_PUBLIC_MANAGE_BACKEND_API_PORT=$NEXT_PUBLIC_MANAGE_BACKEND_API_PORT
WORKDIR /app
COPY twitcasting-manager/package*.json ./
RUN npm install --legacy-peer-deps
COPY twitcasting-manager/ ./
RUN npm run build
EXPOSE 3000
CMD ["npm", "start"]
